<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="114dp"
    android:layout_marginLeft="36dp"
    android:layout_marginRight="36dp"
    android:layout_marginTop="16dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:padding="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fragment_checkup_item_background">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/fragment_checkup_item_back_backButton"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="center"
            android:src="@drawable/ic_xcross_black_24" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_checkup_item_back_deviceAdviceRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/fragment_checkup_item_back_backButton"
            android:nestedScrollingEnabled="false" />

    </RelativeLayout>
</android.support.v7.widget.CardView>