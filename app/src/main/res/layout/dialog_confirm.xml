<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/dialog_confirm_titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:text="آیا میخواهید فاکتور جدید ثبت کنید؟"
        android:textSize="16sp"
        app:fontFamily="@font/shabnam_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_confirm_titleTextView"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:weightSum="1">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dialog_confirm_negativeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/colorAccent"
            android:text="خیر"
            app:fontFamily="@font/shabnam_bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dialog_confirm_positiveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/shabnam_normal"
            android:gravity="center"
            android:padding="16dp"
            android:text="بله" />

    </LinearLayout>

</RelativeLayout>