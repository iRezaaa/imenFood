<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/viewholder_message_card_background">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/viewholder_message_titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="یک موضوع خاص"
            android:textColor="@color/solid"
            app:fontFamily="@font/shabnam_bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/viewholder_message_bodyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/viewholder_message_titleTextView"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="gravity"
            android:gravity="right"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@+id/viewholder_message_timeTextView"
            android:layout_toRightOf="@+id/viewholder_message_timeTextView"
            android:layout_marginStart="16dp"
            android:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است و برای شرایط فعلی تکنولوژی مورد نیاز و کاربردهای متنوع با هدف بهبود ابزارهای کاربردی می باشد"
            app:fontFamily="@font/shabnam_normal" />

        <ir.bvar.imenfood.ui.views.VerticalTextView
            android:id="@+id/viewholder_message_timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="12dp"
            android:alpha="0.4"
            android:textSize="12sp"
            android:text="یک هفته پیش"
            android:textColor="@color/solid"
            app:fontFamily="@font/shabnam_normal"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>